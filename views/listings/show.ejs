<% layout("layouts/boilerplate") %>

<style>
    /* 1. Typography & Header */
    .listing-title {
        font-weight: 700;
        font-size: 2rem;
        color: #222;
        margin-bottom: 0.5rem;
    }
    .listing-location {
        color: #717171;
        font-size: 1rem;
        margin-bottom: 1.5rem;
        font-weight: 500;
    }

    /* 2. Hero Image */
    .listing-img-container {
        width: 100%;
        height: 400px; /* Fixed height for consistency */
        overflow: hidden;
        border-radius: 1.5rem; /* Modern rounded corners */
        margin-bottom: 2rem;
        box-shadow: 0 8px 16px rgba(0,0,0,0.1);
    }
    .listing-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s ease;
    }
    .listing-img-container:hover .listing-img {
        transform: scale(1.03); /* Subtle zoom on hover */
    }

    /* 3. Host Profile Section */
    .host-info {
        display: flex;
        align-items: center;
        border-bottom: 1px solid #ddd;
        padding-bottom: 1.5rem;
        margin-bottom: 1.5rem;
    }
    .host-avatar {
        width: 50px;
        height: 50px;
        background-color: #222;
        color: white;
        border-radius: 50%;
        display: flex;
        justify-content: center;
        align-items: center;
        font-size: 1.2rem;
        margin-right: 1rem;
    }

    /* 4. Booking Card (Sticky) */
    .booking-card {
        border: 1px solid #dddddd;
        border-radius: 1rem;
        padding: 1.5rem;
        box-shadow: 0 6px 16px rgba(0,0,0,0.12);
        background: white;
        
        /* Sticky Magic */
        position: sticky;
        top: 6rem; /* Stays 6rem from top while scrolling */
        z-index: 10;
    }
    .price-tag {
        font-size: 1.4rem;
        font-weight: 700;
    }
    .price-sub {
        font-weight: 400;
        font-size: 1rem;
        color: #717171;
    }

    /* 5. Reviews */
    .review-card {
        border: 1px solid #f0f0f0;
        border-radius: 1rem;
        padding: 1rem;
        background-color: #f9f9f9;
        transition: 0.3s;
    }
    .review-card:hover {
        background-color: #fff;
        box-shadow: 0 4px 10px rgba(0,0,0,0.05);
    }

    /* 6. Map */
    #map {
        height: 400px;
        width: 100%;
        border-radius: 1rem;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    }
</style>

<script>
    const mapToken = "<%= process.env.MAP_TOKEN %>";
    const listing = <%- JSON.stringify(listing) %>;
</script>

<div class="container mt-4 mb-5">
    
    <div class="row">
        <div class="col-12">
            <h1 class="listing-title"><%= listing.title %></h1>
            <p class="listing-location">
                <i class="fa-solid fa-location-dot" style="color: #fe424d;"></i> 
                &nbsp; <%= listing.location %>, <%= listing.country %>
            </p>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="listing-img-container">
                <img src="<%= listing.image.url %>" class="listing-img" alt="listing_img">
            </div>
        </div>
    </div>

    <div class="row">
        
        <div class="col-lg-8 col-md-7 col-sm-12">
            
            <div class="host-info">
                <div class="host-avatar">
                    <%= listing.owner.username[0].toUpperCase() %>
                </div>
                <div>
                    <h5 class="mb-0">Hosted by <%= listing.owner.username %></h5>
                    <small class="text-muted">Superhost &middot; 2 years hosting</small>
                </div>
            </div>

            <div class="mb-4">
                <p><%= listing.description %></p>
            </div>

            <% if(currUser && currUser._id.equals(listing.owner._id)){ %>
                <div class="d-flex mb-4">
                    <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark me-3 px-4">Edit</a>
                    <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
                        <button class="btn btn-danger px-4">Delete</button>
                    </form>
                </div>
            <% } %>

            <hr class="my-4">

            <div class="mb-4">
                <h4><i class="fa-solid fa-star" style="color: #fe424d;"></i> Reviews</h4>
                
                <% if(currUser){%>
                    <div class="card bg-light border-0 p-3 mb-4 mt-3" style="border-radius: 1rem;">
                        <h6 class="mb-3">Leave a review</h6>
                        <form method="POST" action="/listings/<%= listing._id %>/reviews" novalidate class="needs-validation">
                            <div class="mb-3">
                                <fieldset class="starability-slot">
                                    <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                                    <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                                    <label for="first-rate1" title="Terrible">1 star</label>
                                    <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                                    <label for="first-rate2" title="Not good">2 stars</label>
                                    <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                                    <label for="first-rate3" title="Average">3 stars</label>
                                    <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                                    <label for="first-rate4" title="Very good">4 stars</label>
                                    <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                                    <label for="first-rate5" title="Amazing">5 stars</label>
                                </fieldset>
                            </div>
                            <div class="mb-3">
                                <label for="comment" class="form-label">Comments</label>
                                <textarea name="review[comment]" id="comment" rows="3" class="form-control" required style="border-radius: 1rem;"></textarea>
                                <div class="invalid-feedback">Please add some comments for review</div>
                            </div>
                            <button class="btn btn-outline-dark rounded-pill">Submit Review</button>
                        </form>
                    </div>
                <% } %>

                <% if(listing.reviews.length > 0){ %>
                    <div class="row">
                        <% for(let review of listing.reviews){ %>
                            <div class="col-md-6 mb-3">
                                <div class="review-card h-100">
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <h6 class="mb-0">@<%= review.author.username %></h6>
                                        <p class="starability-result mb-0" data-rating="<%= review.rating %>" style="transform: scale(0.8); transform-origin: right center;"></p>
                                    </div>
                                    <p class="card-text text-muted small"><%= review.comment %></p>
                                    
                                    <% if(currUser && currUser._id.equals(review.author._id)) { %>
                                        <form class="mt-2" method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                                            <button class="btn btn-sm btn-link text-danger p-0 text-decoration-none">Delete</button>
                                        </form>
                                    <% } %>
                                </div>
                            </div>
                        <% } %>
                    </div>
                <% } else { %>
                    <p class="text-muted">No reviews yet.</p>
                <% } %>
            </div>
            
            <hr class="my-4">

            <div class="mb-4">
                <h4>Where you'll be</h4>
                <div id="map" class="mt-3"></div>
            </div>

        </div>

        <div class="col-lg-4 col-md-5 col-sm-12">
            <div class="booking-card">
                <div class="d-flex justify-content-between align-items-end mb-4">
                    <div>
                        <span class="price-tag">&#8377;<%= listing.price.toLocaleString("en-IN") %></span>
                        <span class="price-sub"> /night</span>
                    </div>
                    <div class="text-muted" style="font-size: 0.9rem;">
                        <i class="fa-solid fa-star"></i> New
                    </div>
                </div>

                <% if(currUser && !currUser._id.equals(listing.owner._id)) { %>
                    <form action="/listings/<%= listing._id %>/bookings" method="POST" class="needs-validation" novalidate>
                        <div class="row g-2 mb-3">
                            <div class="col-6">
                                <div class="form-floating">
                                    <input type="text" id="checkin" name="booking[checkIn]" class="form-control" placeholder="Check-in" required>
                                    <label for="checkin">Check-in</label>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-floating">
                                    <input type="text" id="checkout" name="booking[checkOut]" class="form-control" placeholder="Check-out" required>
                                    <label for="checkout">Check-out</label>
                                </div>
                            </div>
                        </div>
                        <button class="btn btn-danger w-100 py-3 fw-bold" style="background-color: #fe424d; border: none; border-radius: 0.5rem;">
                            Reserve
                        </button>
                        <p class="text-center mt-3 text-muted" style="font-size: 0.9rem;">You won't be charged yet</p>
                    </form>
                <% } else { %>
                    <div class="alert alert-light text-center">
                        <strong>Your Listing</strong><br>
                        <small>You can't book your own property.</small>
                        <br>
                        <a href="/manage" class="btn btn-outline-dark btn-sm mt-2">Manage Bookings</a>
                    </div>
                <% } %>
            </div>
        </div>

    </div>
</div>

<script src="/js/map.js"></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
<script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>

<script>
    const bookedDates = <%- JSON.stringify(bookings || []) %>;
    
    // Convert to flatpickr format
    const disabledDates = bookedDates.map(booking => {
        return {
            from: booking.checkIn,
            to: booking.checkOut
        };
    });

    // Initialize Flatpickr with cleaner styling (optional via CSS, but JS stays same)
    flatpickr("#checkin", {
        minDate: "today",
        dateFormat: "Y-m-d",
        disable: disabledDates,
        onChange: function(selectedDates, dateStr, instance) {
            checkoutPicker.set('minDate', dateStr);
        }
    });

    const checkoutPicker = flatpickr("#checkout", {
        minDate: "today",
        dateFormat: "Y-m-d",
        disable: disabledDates,
    });
</script>