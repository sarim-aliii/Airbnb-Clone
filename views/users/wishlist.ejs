<% layout("layouts/boilerplate") %>

<div class="row mt-3">
    <div class="col-12 mb-4">
        <h3 class="fw-bold">My Wishlist ❤️</h3>
    </div>

    <% if(listings.length === 0) { %>
        <div class="col-12 text-center mt-5">
            <i class="fa-regular fa-heart fa-3x text-muted mb-3"></i>
            <h3>No saved listings yet</h3>
            <p class="text-muted">As you search, click the heart icon to save your favorite places.</p>
            <a href="/listings" class="btn btn-danger rounded-pill mt-3">Start Exploring</a>
        </div>
    <% } else { %>
        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
            <% for(let listing of listings){ %>
                <div class="card col listing-card hover-effect position-relative">
                    
                    <form action="/wishlist/<%= listing._id %>" method="POST" style="position: absolute; right: 10px; top: 10px; z-index: 20;">
                        <button class="wishlist-btn active">
                            <i class="fa-solid fa-heart"></i>
                        </button>
                    </form>

                    <a href="/listings/<%= listing._id %>" class="listing-link">
                        <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height: 20rem;">
                        <div class="card-img-overlay"></div>
                        <div class="card-body">
                            <p class="card-text">
                                <b><%= listing.title %></b> <br>
                                &#8377; <%= listing.price.toLocaleString("en-IN") %> /night
                            </p>
                        </div>
                    </a>
                </div>
            <% } %>
        </div>
    <% } %>
</div>

<style>
    /* Reuse the wishlist button style */
    .wishlist-btn {
        background: transparent;
        border: none;
        font-size: 1.5rem;
        color: #fe424d; /* Airbnb red */
        transition: transform 0.2s;
    }
    .wishlist-btn:hover {
        transform: scale(1.2);
        cursor: pointer;
    }
</style>