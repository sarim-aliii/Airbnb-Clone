<% layout("layouts/boilerplate") %>

<div class="row mt-3">
    <div class="col-8 offset-2">
        <h3 class="fw-bold mb-4">My Profile</h3>
        
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <form action="/profile?_method=PUT" method="POST" enctype="multipart/form-data" class="needs-validation" novalidate>
                    
                    <div class="row mb-4 align-items-center">
                        <div class="col-md-4 text-center">
                            <img src="<%= user.image.url %>" alt="profile_image" 
                                 class="rounded-circle mb-3 object-fit-cover" 
                                 style="width: 150px; height: 150px; border: 5px solid #f8f9fa;">
                        </div>
                        
                        <div class="col-md-8">
                            <label for="image" class="form-label fw-bold">Change Profile Picture</label>
                            <input type="file" class="form-control" name="user[image]" id="image">
                            <div class="form-text">Accepted formats: .jpg, .jpeg, .png</div>
                        </div>
                    </div>

                    <hr>

                    <div class="mb-3">
                        <label for="username" class="form-label fw-bold">Username</label>
                        <input type="text" class="form-control" name="user[username]" id="username" 
                               value="<%= user.username %>" required>
                    </div>

                    <div class="mb-3">
                        <label for="email" class="form-label fw-bold">Email</label>
                        <input type="email" class="form-control" name="user[email]" id="email" 
                               value="<%= user.email %>" required>
                    </div>

                    <button class="btn btn-danger rounded-pill px-4 mt-3">Save Changes</button>
                </form>
            </div>
        </div>
    </div>
</div>