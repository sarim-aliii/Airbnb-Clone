<% layout("/layouts/boilerplate") %>

    <div class="row mt-3">
        <h1 class="col-6 offset-3">Login on WanderLust</h1>
        <div class="col-6 offset-3">
            <form action="/login" method="POST" class="needs-validation" novalidate>

                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input 
                        name="username" 
                        id="username"
                        type="text" 
                        class="form-control" 
                        required
                    >
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input 
                        name="password" 
                        id="password"
                        type="password" 
                        class="form-control" 
                        required
                    >
                </div>

                <div class="mb-3 d-flex justify-content-end">
                    <a href="/forgot-password" class="text-decoration-none text-muted small">Forgot Password?</a>
                </div>

                <button class="btn btn-success w-100">LogIn</button>
            </form>
            
            <hr>
            <div class="text-center">
                <a href="/auth/google" class="btn btn-outline-danger w-100">
                    <i class="fab fa-google"></i> &nbsp; Continue with Google
                </a>
            </div>
            
        </div>
    </div>