<% layout("layouts/boilerplate") %>

<div class="container mt-4 mb-5">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h3 class="fw-bold">Host Dashboard üóùÔ∏è</h3>
                <span class="badge bg-dark rounded-pill px-3 py-2"><%= bookings.length %> Pending Guests</span>
            </div>

            <% if(bookings.length === 0) { %>
                <div class="text-center p-5 bg-light rounded-4">
                    <i class="fa-regular fa-calendar-xmark fa-3x text-muted mb-3"></i>
                    <h5>No upcoming bookings</h5>
                    <p class="text-muted">Your listings are waiting for their first guests!</p>
                </div>
            <% } else { %>
                
                <div class="card dashboard-card">
                    <div class="table-responsive">
                        <table class="table custom-table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th scope="col" class="ps-4">Property</th>
                                    <th scope="col">Guest</th>
                                    <th scope="col">Dates</th>
                                    <th scope="col">Earnings</th>
                                    <th scope="col" class="text-end pe-4">Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% for(let booking of bookings) { %>
                                    <tr>
                                        <td class="ps-4">
                                            <div class="d-flex align-items-center">
                                                <img src="<%= booking.listing.image.url %>" class="rounded me-3" style="width: 50px; height: 50px; object-fit: cover;">
                                                <a href="/listings/<%= booking.listing._id %>" class="text-dark fw-bold text-decoration-none">
                                                    <%= booking.listing.title %>
                                                </a>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="user-avatar">
                                                    <%= booking.author.username.charAt(0).toUpperCase() %>
                                                </div>
                                                <span><%= booking.author.username %></span>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="small">
                                                <i class="fa-regular fa-calendar me-1 text-muted"></i>
                                                <%= booking.checkIn.toLocaleDateString('en-US', {month:'short', day:'numeric'}) %> - 
                                                <%= booking.checkOut.toLocaleDateString('en-US', {month:'short', day:'numeric'}) %>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="fw-bold text-success">‚Çπ<%= booking.totalPrice.toLocaleString("en-IN") %></span>
                                        </td>
                                        <td class="text-end pe-4">
                                            <span class="badge bg-success rounded-pill px-3">Confirmed</span>
                                        </td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>

            <% } %>
        </div>
    </div>
</div>